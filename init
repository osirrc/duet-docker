#!/bin/bash
apt-get install -y git
echo $PATH
source source.sh
git clone https://github.com/Narabzad/elr_files.git
rm -R /usr/lib/jvm/java-11-openjdk-amd64/
rm /usr/lib/jvm/default-java
apt-get install -y ivy
rm -r /usr/lib/jvm/java-1.11.0-openjdk-amd64
echo $PATH
cd elr_files/pylucene-4.9.0-0/jcc
python setup.py build
python setup.py install
cd ..
make
make install
cd ..
cd ..
mkdir -p /index_dir/
cd index_dir/
apt install wget
wget https://gustav1.ux.uis.no/downloads/elr/index7_only_uri.tar.bz2
tar xjf index7_only_uri.tar.bz2
rm index7_only_uri.tar.bz2
wget https://gustav1.ux.uis.no/downloads/elr/index7_stopped.tar.bz2
tar xjf index7_stopped.tar.bz2
rm index7_stopped.tar.bz2
cd ..
