
#!/usr/bin/env python3
import os
import argparse
import json
import subprocess

print("Searching...")

parser = argparse.ArgumentParser()
parser.add_argument("--json", type=json.loads, required=True, help="the json input")
args, unknown = parser.parse_known_args()

topic_path = args.json["topic"]["path"]
out_file_name = args.json["opts"]["out_file_name"]
search_args = args.json["opts"]["search_args"]


os.chdir("//elr_files//EntityLinkingRetrieval-ELR-master")
subprocess.run("python -m nordlys.elr.retrieval_elr {} -q {}".format(search_args,topic_path),shell=True)






